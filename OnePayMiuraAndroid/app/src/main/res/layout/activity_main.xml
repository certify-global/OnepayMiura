<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/transactionButton"
        android:layout_width="320dp"
        android:layout_height="132dp"
        android:layout_marginTop="48dp"
        android:onClick="onTransaction"
        android:text="Transaction"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cancelTransactionButton"
        android:layout_width="322dp"
        android:layout_height="119dp"
        android:layout_marginTop="52dp"
        android:onClick="onCancelTransaction"
        android:text="Canacel Transaction"
        app:layout_constraintHorizontal_bias="0.565"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onManualTransaction" />

    <Button
        android:id="@+id/onManualTransaction"
        android:layout_width="325dp"
        android:layout_height="131dp"
        android:layout_marginTop="32dp"
        android:onClick="onManualTransaction"
        android:text="Manual Transaction"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transactionButton" />

    <Button
        android:id="@+id/onManualCancelTransaction"
        android:layout_width="327dp"
        android:layout_height="107dp"
        android:layout_marginTop="56dp"
        android:onClick="onCancelManualTransaction"
        android:text="Cancel Manual Transaction"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cancelTransactionButton" />

    <!--<Button
        android:id="@+id/setDeviceClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
